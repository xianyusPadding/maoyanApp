.container{
  width: 100%;
  height: 500px;
  font-family: "Microsoft YaHei";
}
.search{
  width: 100%;
  height: 40px;
  padding-top: 10px;
  text-align: center;
  background-color:#2B9F32;
}
.search input{
  width: 95%;
  background-color: #fff;
  margin:0px auto;
  border: 1px solid #eee;
  border-radius: 5px;
  font-size: 13px;
}
.section .header{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin:10px 0;
}
.section .header text{
  font-size: 14px;
}
.title{
  border-left: 2px solid #2B9F32;
  text-indent: 10px;
}
.more{
  color: #2B9F32;
  margin-right: 10px;
}
.main_scrollView{
  width: 100%;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}
.move_content{
  width: 120px;
  height: 190px;
  display: inline-block;
}
.move_img{
  background:red;
  width:110px;
  height:150px;
  margin:0 5px;
}
.move_title{
  font-size: 14px;
  display: block;
  text-indent: 10px;
}
.move_score{
  font-size: 13px;
  display: block;
  color:#adadad;
  text-indent: 10px;
}